<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.ronintech.bayTrans</groupId>
    <artifactId>gateops1</artifactId>
    <name>gateops1</name>
    <version>1.0-SNAPSHOT</version>
    <url>http://maven.apache.org</url>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>com.ronintech.bayTrans.RPi:customjpos</include>
                                    <include>com.ronintech.bayTrans.RPi:jcl</include>
                                    <include>com.ronintech.bayTrans.RPi:jpos18-controls</include>
                                    <include>com.ronintech.bayTrans.RPi:xerces</include>
                                </includes>
                                <excludes>
                                    <exclude>com.ronintech.bayTrans.RPi:jpos1122</exclude>
                                    <exclude>com.ronintech.bayTrans.RPi:jpos1122-controls</exclude>
                                </excludes>
                            </artifactSet>
                            <transformers>
                                <transformer>
                                    <mainClass>com.ronintech.bayTrans.App</mainClass>
                                </transformer>
                                <transformer>
                                    <resource>jpos.xml</resource>
                                    <file>jpos.xml</file>
                                </transformer>
                                <transformer>
                                    <resource>libjposprintercomm.so</resource>
                                    <file>libjposprintercomm.so</file>
                                </transformer>
                                <transformer>
                                    <resource>libjposprintercomm64.so</resource>
                                    <file>libjposprintercomm64.so</file>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>

